[Unit]
Description=SearXNG metasearch engine
After=network.target

[Service]
Type=simple
User=searxng
Group=searxng
WorkingDirectory=/var/lib/searxng
Environment=LANG=C.UTF-8
Environment=LANGUAGE=C.UTF-8
Environment=LC_ALL=C.UTF-8
Environment=SEARX_SETTINGS_PATH=/etc/searxng/settings.yml
ExecStart=/usr/bin/searxng-run
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
