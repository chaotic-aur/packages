# Ensure Qt6
eval "$(declare -f build | sed -E -e 's&(-DCMAKE_INSTALL_PREFIX)&-DQT_VERSION_MAJOR=6 \1&')"

# Fix for Qt 6.10
_pkgsrc="$_pkgname-$pkgver"
prepare() {
  cd "$_pkgsrc"
  sed -E -e 's&\b(Qt\S*::)?(Gui)\b&\1\2 \1\2Private&' -i scribus/third_party/Qt-Advanced-Docking-System/src/CMakeLists.txt
}
