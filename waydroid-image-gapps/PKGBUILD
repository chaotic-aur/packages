  'bc9770e4d554e046c42c35b17b8e0e39fc696c18f5b78e55e8fa4d4e6de772ff')
sha256sums_aarch64=('28cfd6a12f2dc96d47fc5bf33a7aa07f33a6620e2368e2e4b5310bf18f94d233'
