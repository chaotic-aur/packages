# Maintainer: aur.chaotic.cx

_pkgname="upscayl-models"
pkgname="$_pkgname"
pkgver=20220424
pkgrel=2
pkgdesc="Image upscaling models for Upscayl"
url="https://github.com/xinntao/Real-ESRGAN"
license=('AGPL-3.0-only')
arch=('x86_64')

optdepends=(
  'upscayl-ncnn: CLI to use the models'
  'upscayl-desktop: GUI frontend'
)

provides=("$_pkgname") # no conflicts

options=('!debug' '!strip')

source=("$url/releases/download/v0.2.5.0/realesrgan-ncnn-vulkan-20220424-ubuntu.zip")
sha256sums=('SKIP')

package() {
  local _dst="$pkgdir/usr/lib/upscayl"
  mkdir -pm755 "$_dst"
  cp -a "models" "$_dst/"
}
