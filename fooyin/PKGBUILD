# Maintainer: zxp19821005 <zxp19821005 at 163 dot com>
pkgname=fooyin
_pkgname=Fooyin
pkgver=0.6.1
pkgrel=1
pkgdesc="A customisable music player"
arch=('x86_64')
url="https://github.com/ludouzi/fooyin"
license=('GPL-3.0-only')
depends=(
  'qt6-base'
  'qt6-svg'
  'qt6-tools'
  'alsa-lib'
  'taglib'
  'ffmpeg'
  'kdsingleapplication'
  'libgme'
  'libarchive'
)
makedepends=(
  'gcc'
  'ninja'
  'pkgconf'
  'cmake'
  'libpipewire'
  'icu'
  'libopenmpt'
  'libsndfile'
  'libvgm-player-git'
)
optdepends=(
  'sdl2: For the SDL2 audio output plugin'
  'pipewire: For the PipeWire audio output plugin'
)
source=(
  "${pkgname}.git::git+${url}#tag=v${pkgver}"
)
sha256sums=('ffd9fa11c7aff065894e9b0136c12dbd6d5086f4b2081e384ea7a2dfcbf72124')
build() {
  cd "${srcdir}/${pkgname}.git"
  cmake -S . -B build -G Ninja \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_PCH=ON \
    -DBUILD_WERROR=ON \
    -DINSTALL_HEADERS=ON \
    -DCMAKE_BUILD_TYPE=None
  cmake --build build -j$(nproc)
}
package() {
  cd "${srcdir}/${pkgname}.git"
  DESTDIR="${pkgdir}" cmake --install build
  install -Dm644 "${srcdir}/${pkgname}.git/COPYING" "${pkgdir}/usr/share/licenses/fooyin/LICENSE"
}
