unset install

license=('GPL-3.0-only')

_pkgsrc="${pkgname%-git}"
pkgver() {
  cd "$_pkgsrc"
  git describe --long --tags --abbrev=7 --exclude='*[a-zA-Z][a-zA-Z]*' \
    | sed -E 's/^[^0-9]*//;s/([^-]*-g)/r\1/;s/-/./g'
}

eval "build() {
  export CFLAGS+=' -std=gnu99'
  $(declare -f build | tail -n +2)
}"
