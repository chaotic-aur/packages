+static void
+adw_style_manager_theme_changed (GSettings       *settings,
+                                 const char      *key,
+                                 AdwStyleManager *self)
+{
+  char *user_theme = NULL;
+  char *color_scheme = NULL;
+  char *user_icon_theme = NULL;
+  const char *selected = NULL;
+
+  if (!self->display || !self->gtk_settings)
+    return;
+
+  user_theme = g_settings_get_string (settings, "gtk-theme");
+  if (user_theme && *user_theme) {
+    selected = user_theme;
+  } else {
+    selected = "Adwaita-empty";
+  }
+
+  self->changing_gtk_settings = TRUE;
+  g_object_set (self->gtk_settings, "gtk-theme-name", selected, NULL);
+  self->changing_gtk_settings = FALSE;
+
+  user_icon_theme = g_settings_get_string (settings, "icon-theme");
+  if (user_icon_theme && *user_icon_theme) {
+    self->changing_gtk_settings = TRUE;
+    g_object_set (self->gtk_settings, "gtk-icon-theme-name", user_icon_theme, NULL);
+    self->changing_gtk_settings = FALSE;
+  }
+
+  g_setenv ("GTK_THEME", selected, TRUE);
+
+  color_scheme = g_settings_get_string (settings, "color-scheme");
+  if (color_scheme && *color_scheme) {
+    if (g_strcmp0 (color_scheme, "prefer-dark") == 0)
+      adw_style_manager_set_color_scheme (self, ADW_COLOR_SCHEME_PREFER_DARK);
+    else if (g_strcmp0 (color_scheme, "force-dark") == 0)
+      adw_style_manager_set_color_scheme (self, ADW_COLOR_SCHEME_FORCE_DARK);
+    else if (g_strcmp0 (color_scheme, "force-light") == 0)
+      adw_style_manager_set_color_scheme (self, ADW_COLOR_SCHEME_FORCE_LIGHT);
+    else
+      adw_style_manager_set_color_scheme (self, ADW_COLOR_SCHEME_PREFER_LIGHT);
+  }
+
+  g_free (user_theme);
+  g_free (user_icon_theme);
+  g_free (color_scheme);
+}
