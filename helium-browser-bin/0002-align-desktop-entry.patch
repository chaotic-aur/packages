diff --git a/helium.desktop b/helium.desktop
index 5c242d4..f602605 100644
--- a/helium.desktop
+++ b/helium.desktop
@@ -1,6 +1,6 @@
 [Desktop Entry]
 Version=1.0
-Name=Helium
